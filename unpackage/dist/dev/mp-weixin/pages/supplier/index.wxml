<view class="supplier-container"><view class="header"><view class="scan-btn" bindtap="{{a}}"><text class="scan-icon">📷</text></view><view class="stats-card"><view class="stats-item"><text class="stats-label">今日提交</text><text class="stats-value">{{b}}单</text></view><view class="stats-item"><text class="stats-label">总金额</text><text class="stats-value">￥{{c}}</text></view></view></view><view class="form-section"><view class="form-item"><text class="label"><text class="required">*</text>产品名称</text><view class="input-wrap"><input class="input" placeholder="请输入或选择产品名称" bindinput="{{d}}" bindfocus="{{e}}" bindblur="{{f}}" value="{{g}}"/><view wx:if="{{h}}" class="history-dropdown"><view wx:for="{{i}}" wx:for-item="item" wx:key="c" class="history-item" bindtap="{{item.d}}"><text class="item-name">{{item.a}}</text><text class="item-price">￥{{item.b}}</text></view></view></view></view><view class="form-item"><text class="label"><text class="required">*</text>数量</text><view class="stepper"><text class="step-btn" bindtap="{{j}}">-</text><input class="step-input" type="number" bindinput="{{k}}" value="{{l}}"/><text class="step-btn" bindtap="{{m}}">+</text></view></view><view class="form-item"><text class="label"><text class="required">*</text>单价</text><view class="price-input-wrap"><input type="digit" class="{{['input', n && 'price-warning']}}" bindinput="{{o}}" value="{{p}}"/><view wx:if="{{q}}" class="price-tips"><text class="tip-item">历史均价：￥{{r}}</text><text class="tip-item">上次价格：￥{{s}}</text></view></view></view><view class="total-section"><text class="total-label">总价</text><text class="total-value">￥{{t}}</text></view></view><view class="footer"><button class="submit-btn" disabled="{{v}}" bindtap="{{w}}">提交订单</button><text class="history-link" bindtap="{{x}}">历史记录</text></view><view wx:if="{{y}}" class="offline-tip"><text>当前处于离线状态，数据将在网络恢复后提交</text></view></view>